# Database Configuration
POSTGRES_DB=echo_music
POSTGRES_USER=echo_user
POSTGRES_PASSWORD=echo_password_123
DATABASE_URL=postgresql://echo_user:echo_password_123@postgres:5432/echo_music

# Redis Configuration
REDIS_URL=redis://redis:6379

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@echo.com
PGADMIN_DEFAULT_PASSWORD=admin

# Lidarr Configuration
LIDARR_PUID=1000
LIDARR_PGID=1000
LIDARR_TZ=Europe/Paris
# Extended Lidarr configuration
LIDARR_EXTENDED1=./extended/folder_1
LIDARR_EXTENDED2=./extended/folder_2
# Ports Configuration
POSTGRES_PORT=5432
REDIS_PORT=6379
BACKEND_PORT=3000
FRONTEND_PORT=3001
PGADMIN_PORT=5050
LIDARR_PORT=8686

# Container Names
POSTGRES_CONTAINER=echo_postgres
REDIS_CONTAINER=echo_redis
BACKEND_CONTAINER=echo_backend
FRONTEND_CONTAINER=echo_frontend
PGADMIN_CONTAINER=echo_pgadmin
LIDARR_CONTAINER=echo_lidarr

# Volume Paths Configuration
# PostgreSQL volumes
POSTGRES_DATA_PATH=./volumes/postgres/data
POSTGRES_INIT_SQL_PATH=./database/init.sql

# Redis volumes
REDIS_DATA_PATH=./volumes/redis/data

# Backend volumes
BACKEND_APP_PATH=.
BACKEND_NODE_MODULES_PATH=/app/node_modules

# Frontend volumes
FRONTEND_APP_PATH=./frontend
FRONTEND_NODE_MODULES_PATH=/app/node_modules

# Lidarr volumes
LIDARR_CONFIG_PATH=./volumes/lidarr/config
LIDARR_MUSIC_PATH=./volumes/lidarr/music
LIDARR_DOWNLOADS_PATH=./volumes/lidarr/downloads


